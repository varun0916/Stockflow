datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  users     User[]
  products  Product[]
  settings  Setting?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id             Int           @id @default(autoincrement())
  email          String        @unique
  passwordHash   String
  organization   Organization  @relation(fields: [organizationId], references: [id])
  organizationId Int
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Product {
  id                Int          @id @default(autoincrement())
  organization      Organization @relation(fields: [organizationId], references: [id])
  organizationId    Int
  name              String
  sku               String
  description       String?
  quantityOnHand    Int          @default(0)
  costPrice         Float?
  sellingPrice      Float?
  lowStockThreshold Int?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@unique([organizationId, sku])
}

model Setting {
  id                Int          @id @default(autoincrement())
  organization      Organization @relation(fields: [organizationId], references: [id])
  organizationId    Int          @unique
  defaultLowStock   Int          @default(5)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
}
